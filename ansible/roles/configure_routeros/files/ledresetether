/interface ethernet

:local ledsuffix "-led"
:local iflst [find name~"ether"]

:foreach counter=k,i in=$iflst do={
    :local iname [get $i name]
    :local iled [/system leds find leds=($iname.$ledsuffix)]
    :put ("Reset: ".[/system leds get $iled leds])
    /system leds set $iled type=interface-activity
}
